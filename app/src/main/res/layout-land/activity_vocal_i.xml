<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vocal_i"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gunna.vocales.Vocal_i">
    <TextView
        android:text="Elija la opcion de entrada al tutorial de la vocal"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:id="@+id/textView2"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="7dp"
        android:layout_marginTop="9dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="7dp" />

    <Button
        android:text="Ver texto"
        android:textSize="20sp"
        android:background="@drawable/texto"
        android:textColor="#FFFFFF"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/button8"
        android:onClick="siguiente_texto_I"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="3dp"
        app:layout_constraintRight_toRightOf="@+id/button9"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginRight="3dp" />

    <Button
        android:text="Escuchar Audio"
        android:background="@drawable/audio_a"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/button9"
        android:onClick="siguiente_audio_I"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/button10"
        app:layout_constraintRight_toRightOf="@+id/button10"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="56dp"
        app:layout_constraintLeft_toLeftOf="@+id/button10" />

    <Button
        android:text="Ver Video"
        android:textColor="#FFFFFF"
        android:background="@drawable/video_a"
        android:textSize="20sp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/button10"
        android:onClick="siguiente_video_I"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/button11"
        app:layout_constraintRight_toRightOf="@+id/button11"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="89dp"
        app:layout_constraintLeft_toLeftOf="@+id/button11" />

    <Button
        android:text="Salir"
        android:background="@drawable/boton_salir"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:id="@+id/button11"
        android:onClick="salir_i"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
