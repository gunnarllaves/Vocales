<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_principal"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gunna.vocales.Principal">

    <TextView
        android:text="Vocales"
        android:textSize="36sp"
        android:textColor="#FFFFFF"

        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="7dp"
        app:layout_constraintRight_toRightOf="@+id/button"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="7dp" />

    <Button
        android:text="A a"
        android:background="@drawable/boton_a"
        android:textSize="36sp"
        android:textStyle="italic|bold"
        android:layout_width="142dp"
        android:layout_height="0dp"
        android:onClick="siguiente_A"
        android:id="@+id/button"
        android:textColor="#FFFFFF"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button3" />

    <Button
        android:text="E e"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        android:textColor="#FFFFFF"
        android:background="@drawable/boton_e"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/button2"
        android:onClick="siguiente_E"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/button4"
        app:layout_constraintBaseline_toBaselineOf="@+id/button"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/button4" />

    <Button
        android:text="I i"
        android:textStyle="bold|italic"
        android:background="@drawable/boton_i"
        android:onClick="siguiente_I"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/button3"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintRight_toRightOf="@+id/button5"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/button5" />

    <Button
        android:text="O o"
        android:background="@drawable/boton_o"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="italic|bold"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:id="@+id/button4"
        android:onClick="siguiente_O"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="28dp" />

    <Button
        android:text="U u"
        android:textColor="#FFFFFF"
        android:background="@drawable/boton_u"
        android:textSize="36sp"
        android:onClick="siguiente_U"
        android:textStyle="bold|italic"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="28dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="122dp"
        android:layout_marginRight="28dp" />

    <Button
        android:background="@drawable/imagenprincipal"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:id="@+id/button6"
        android:onClick="siguiente_video_principal"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="205dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="209dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="36dp"
        app:layout_constraintLeft_toLeftOf="@+id/button4"
        android:layout_marginLeft="205dp"
        android:layout_marginRight="209dp" />

    <Button
        android:text="Salir"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        android:textColor="#FFFFFF"
        android:background="@drawable/boton_salir"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:onClick="salir"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="27dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="27dp" />
</android.support.constraint.ConstraintLayout>
